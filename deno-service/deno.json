{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-env main.ts",
    "test": "deno test --allow-net --allow-env main_test.ts"
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/node_modules/**", "**/*_test.ts"]
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/node_modules/**"]
  }
}
